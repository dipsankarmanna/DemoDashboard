                android:layout_width="match_parent"
                android:layout_height="@dimen/_150mdp"
                android:background="@drawable/background_rec"
                android:layout_marginVertical="@dimen/_10mdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_160mdp"
                app:cardCornerRadius="@dimen/_10mdp"
                app:cardElevation="@dimen/_10mdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#4986B6"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/accbal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5mdp"
                        android:layout_marginTop="@dimen/_5mdp"
                        android:drawableLeft="@drawable/ic_wallet"
