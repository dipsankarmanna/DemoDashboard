<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:backgroundTint="#7D8081"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_130mdp"
        android:layout_marginVertical="@dimen/_8mdp"
        android:layout_marginHorizontal="@dimen/_3mdp"
        app:cardCornerRadius="@dimen/_15mdp">

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_160mdp"
        android:layout_marginHorizontal="@dimen/_3mdp"
        app:cardCornerRadius="@dimen/_10mdp"
        app:cardElevation="@dimen/_10mdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#7D8081"
            android:orientation="vertical">

            <TextView
                android:id="@+id/accbal"
                android:layout_width="@dimen/_150mdp"
                android:layout_height="@dimen/_30mdp"
                android:layout_marginStart="@dimen/_5mdp"
                android:layout_marginTop="@dimen/_5mdp"
                android:background="#B1ACAC"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_3mdp">

                <TextView
                    android:layout_width="@dimen/_120mdp"
                    android:layout_height="@dimen/_30mdp"
                    android:layout_marginStart="@dimen/_7mdp"
                    android:background="#B1ACAC"
                    android:textColor="#ffffff"
                    android:textSize="35sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="@dimen/_22mdp"
                    android:layout_height="@dimen/_22mdp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_7mdp"
                    android:background="#B1ACAC" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20mdp"
                android:gravity="center">

                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/_45mdp"
                    android:layout_height="@dimen/_45mdp"
                    app:cardCornerRadius="@dimen/_50mdp">

                    <com.facebook.shimmer.ShimmerFrameLayout
                        android:id="@+id/balance_sh"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="@dimen/_40mdp"
                                android:layout_height="@dimen/_35mdp" />
                        </LinearLayout>
                    </com.facebook.shimmer.ShimmerFrameLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/_45mdp"
                    android:layout_height="@dimen/_45mdp"
                    android:layout_marginHorizontal="@dimen/_8mdp"
                    app:cardCornerRadius="@dimen/_50mdp">

                    <com.facebook.shimmer.ShimmerFrameLayout
                        android:id="@+id/send_sh"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="@dimen/_40mdp"
                                android:layout_height="@dimen/_35mdp" />
                        </LinearLayout>
                    </com.facebook.shimmer.ShimmerFrameLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/_45mdp"
                    android:layout_height="@dimen/_45mdp"
                    app:cardCornerRadius="@dimen/_50mdp">

                    <com.facebook.shimmer.ShimmerFrameLayout
                        android:id="@+id/request_sh"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="@dimen/_40mdp"
                                android:layout_height="@dimen/_35mdp"
                                android:padding="@dimen/_1mdp" />
                        </LinearLayout>
                    </com.facebook.shimmer.ShimmerFrameLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/_45mdp"
                    android:layout_height="@dimen/_45mdp"
                    android:layout_marginHorizontal="@dimen/_8mdp"
                    app:cardCornerRadius="@dimen/_50mdp">

                    <com.facebook.shimmer.ShimmerFrameLayout
                        android:id="@+id/transfer_sh"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="@dimen/_40mdp"
                                android:layout_height="@dimen/_35mdp"
                                android:padding="@dimen/_3mdp" />
                        </LinearLayout>
                    </com.facebook.shimmer.ShimmerFrameLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/_45mdp"
                    android:layout_height="@dimen/_45mdp"
                    app:cardCornerRadius="@dimen/_50mdp">

                    <com.facebook.shimmer.ShimmerFrameLayout
                        android:id="@+id/history_sh"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="@dimen/_40mdp"
                                android:layout_height="@dimen/_35mdp" />
                        </LinearLayout>
                    </com.facebook.shimmer.ShimmerFrameLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5mdp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="           "
                    android:background="#ffffff"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_22mdp"
                    android:text="          "
                    android:background="#ffffff"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="           "
                    android:background="#ffffff"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_15mdp"
                    android:text="             "
                    android:background="#ffffff"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="               "
                    android:background="#ffffff"
                    android:textStyle="bold" />
            </LinearLayout>

            <!--                    <TextView-->

            <!--                        android:layout_width="match_parent"-->
            <!--                        android:layout_height="wrap_content"-->
            <!--                        android:text="Dinesh Karmakar"-->
            <!--                        android:textStyle="bold" />-->
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_115mdp"
        android:layout_marginTop="@dimen/_10mdp"
        android:backgroundTint="#7D8081"
        app:cardCornerRadius="@dimen/_10mdp"
        app:cardElevation="@dimen/_10mdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="@dimen/_10mdp"
                android:layout_marginBottom="@dimen/_5mdp"
                android:text="                               "
                android:background="#ffffff"
                android:textSize="17sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/_45mdp"
                        android:layout_height="@dimen/_45mdp"
                        app:cardCornerRadius="@dimen/_50mdp">

                        <com.facebook.shimmer.ShimmerFrameLayout
                            android:id="@+id/paybill_sh"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="@dimen/_40mdp"
                                    android:layout_height="@dimen/_35mdp"
                                    android:scaleType="fitXY" />
                            </LinearLayout>
                        </com.facebook.shimmer.ShimmerFrameLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/_45mdp"
                        android:layout_height="@dimen/_45mdp"
                        android:layout_marginHorizontal="@dimen/_20mdp"
                        app:cardCornerRadius="@dimen/_50mdp">

                        <com.facebook.shimmer.ShimmerFrameLayout
                            android:id="@+id/banktr_sh"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="@dimen/_40mdp"
                                    android:layout_height="@dimen/_35mdp"
                                    android:padding="@dimen/_4mdp" />
                            </LinearLayout>
                        </com.facebook.shimmer.ShimmerFrameLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/_45mdp"
                        android:layout_height="@dimen/_45mdp"
                        app:cardCornerRadius="@dimen/_50mdp">

                        <com.facebook.shimmer.ShimmerFrameLayout
                            android:id="@+id/savings_sh"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="@dimen/_40mdp"
                                    android:layout_height="@dimen/_35mdp"
                                    android:padding="@dimen/_3mdp" />
                            </LinearLayout>
                        </com.facebook.shimmer.ShimmerFrameLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/_45mdp"
                        android:layout_height="@dimen/_45mdp"
                        android:layout_marginLeft="@dimen/_20mdp"
                        app:cardCornerRadius="@dimen/_50mdp">

                        <com.facebook.shimmer.ShimmerFrameLayout
                            android:id="@+id/addmoney_sh"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="@dimen/_40mdp"
                                    android:layout_height="@dimen/_35mdp"
                                    android:padding="@dimen/_3mdp" />
                            </LinearLayout>
                        </com.facebook.shimmer.ShimmerFrameLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="22dp"
                        android:layout_marginEnd="5dp"
                        android:gravity="center"
                        android:text="               "
                        android:background="#ffffff"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="@+id/textView4"
                        app:layout_constraintEnd_toStartOf="@+id/textView3"
                        app:layout_constraintHorizontal_chainStyle="spread"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/textView4" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="-10dp"
                        android:layout_marginEnd="1dp"
                        android:gravity="center"
                        android:text="                  "
                        android:background="#ffffff"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/textView4"
                        app:layout_constraintStart_toEndOf="@+id/textView2" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:gravity="center"
                        android:text="              "
                        android:background="#ffffff"
                        android:textStyle="bold"
                        app:layout_constraintBaseline_toBaselineOf="@+id/textView5"
                        app:layout_constraintEnd_toStartOf="@+id/textView5"
                        app:layout_constraintStart_toEndOf="@+id/textView3" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="6dp"
                        android:layout_marginRight="6dp"
                        android:gravity="center"
                        android:text="                  "
                        android:background="#ffffff"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/textView4"
                        app:layout_constraintTop_toTopOf="@+id/textView3" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8mdp"
        android:padding="@dimen/_5mdp"
        app:cardCornerRadius="@dimen/_10mdp"
        app:cardElevation="@dimen/_10mdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5mdp">

                <TextView
                    android:background="#7D8081"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginStart="@dimen/_10mdp"
                    android:layout_marginBottom="@dimen/_5mdp"
                    android:text="                               "
                    android:textSize="17sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35mdp"
                        android:layout_marginHorizontal="@dimen/_3mdp"
                        android:background="#7D8081"
                        app:cardCornerRadius="@dimen/_10mdp"
                        app:cardElevation="@dimen/_10mdp">

                        <LinearLayout
                            android:background="#7D8081"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center_vertical">

                            <androidx.cardview.widget.CardView
                                android:background="#7D8081"
                                android:id="@+id/trimg"
                                android:layout_width="@dimen/_30mdp"
                                android:layout_height="@dimen/_30mdp"
                                android:layout_marginHorizontal="@dimen/_20mdp"
                                app:cardCornerRadius="@dimen/_50mdp">

                                <LinearLayout
                                    android:background="#7D8081"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="@dimen/_40mdp"
                                        android:layout_height="@dimen/_35mdp"
                                        android:padding="@dimen/_4mdp" />
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:background="#7D8081"
                                android:layout_width="@dimen/_30mdp"
                                android:layout_height="@dimen/_30mdp"
                                android:layout_marginHorizontal="@dimen/_20mdp"
                                app:cardCornerRadius="@dimen/_50mdp">

                                <LinearLayout
                                    android:background="#7D8081"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="@dimen/_40mdp"
                                        android:layout_height="@dimen/_35mdp"
                                        android:padding="@dimen/_4mdp" />
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_centerInParent="true"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="         "
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="                 "
                                    android:textColor="#737272" />
                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_marginTop="@dimen/_5mdp"
                                android:layout_marginRight="@dimen/_5mdp"
                                android:text="     "
                                android:textColor="#C52B2B"
                                android:textStyle="bold" />
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
